<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/recipe_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/recipe_title"
        android:layout_below="@+id/recipe_img"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:maxWidth="80dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/recipe_rait"
        android:layout_below="@+id/recipe_title"
        android:layout_alignRight="@+id/recipe_title"
        android:layout_alignEnd="@+id/recipe_title"
        android:textSize="10dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:maxLength="5" />
</RelativeLayout>